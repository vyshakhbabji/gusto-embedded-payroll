{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2017",
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "lib",
    "preserveConstEnums": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src"
  ]
}